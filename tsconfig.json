{
  "compilerOptions": {
    "baseUrl": "./",
    /* alias */
    "paths": {
      "react-ui": ["src/index.ts"],
      "react-ui/es/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "target": "es2016",
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // 禁止对同一个文件的不一致的引用。(即强制文件引入时区分大小写)
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es"]
}
